            <form class="form-login" action="/users/login" method="POST">
                <label for="user">
                    Username or email address
                    <input class="field" type="text" name="username" id="user" autocomplete="off" required>
                </label>
                <label for="password">
                    Password
                    <input class="field" type="password" name="password" id="password" autocomplete="off" required>
                </label>

                <input class="button" type="submit" value="Sign in">
            </form>

